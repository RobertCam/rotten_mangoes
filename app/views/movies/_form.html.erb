<%= form_for @movie, :html => {:multipart => true} do |f| %>
  <form class="form-horizontal">
  <div class="form-group">
    <%= f.label :title, class: "control-label" %>
    <div class="col-sm-2">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :release_date, class: "control-label" %>
    <div class="col-sm-2">
      <%= f.date_field :release_date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :director, class: "control-label" %>
    <div class="col-sm-2">
      <%= f.text_field :director, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :runtime_in_minutes, class: "control-label" %>
    <div class="col-sm-2">
      <%= f.number_field :runtime_in_minutes, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :poster_image_url, class: "control-label" %>
    <div class="col-sm-2">
      <%= f.text_field :poster_image_url, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "control-label" %>
    <div class="col-sm-2">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :poster, class: "control-label" %>
    <div class="col-sm-2">
      <%= f.file_field :poster %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-success">Submit</button>
    </div>
  </div>
</form>
<% end %>


