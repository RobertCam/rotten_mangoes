<div class="form-inline">
  <div class="field">
    <%= f.label :email, class: "col-sm-1 control-label" %>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :firstname, "First Name", class: "col-sm-1 control-label" %>
    <%= f.text_field :firstname, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :lastname, "Last Name", class: "col-sm-1 control-label" %>
    <%= f.text_field :lastname, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :password, class: "col-sm-1 control-label" %>
    <%= f.password_field :password, class: "form-control" %>    
  </div>
  <div class="field">
    <%= f.label :password_confirmation, class: "col-sm-1 control-label" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :admin, "Admin", class: "col" %>
    <%= f.check_box :admin %>
</div>