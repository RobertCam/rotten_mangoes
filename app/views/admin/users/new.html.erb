<h1>Add new user</h1>
<%= form_for [:admin, @user], url: admin_users_path do |f| %>
  <% if @user.errors.any? %>
    <div>
      <%= pluralize(@user.errors.count, "error") %> prevented the account from being created:
      <ul>
        <% @user.errors.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-control">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="form-control">
    <%= f.label :firstname, "First Name" %>
    <%= f.text_field :firstname %>
  </div>
  <div class="form-control">
    <%= f.label :lastname, "Last Name" %>
    <%= f.text_field :lastname %>
  </div>
  <div class="form-control">
    <%= f.label :password %>
    <%= f.password_field :password %>    
  </div>
  <div class="form-control">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="form-control">
    <%= f.label :admin, "Make Admin" %>
    <%= f.check_box :admin %>
  </div>
  <div class="btn btn-submit"><%= f.submit "Submit" %></div>
<% end %>
