<%= link_to "All Movies", movies_path %><br>

<% if flash[:alert] %>
    <div><%= flash[:alert] %></div>
<% end %>

<table class="table table-hover" border="1">
  <tbody>
    <tr>
    <th>Admin</th>
    <th>Full Name</th>
    <th>Email</th>
    <th>Created on</th>
    <th>Edit Functions</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td>
      <%= user.admin %>
      </td>
      <td>
        <%= link_to user.full_name, admin_user_path(user) %>
      </td>
      <td>
        <%= user.email %>
      </td>
      <td>
        <%= formatted_date(user.created_at) %>
      </td>
      <td>
        <div class="actions">
        <%= link_to "Edit", edit_admin_user_path(user) %>
        <%= link_to "Delete", admin_user_path(user), method: :delete, confirm: "Are you sure?" %>
        <%= form_for [:admin, user], method: "switch_to_user" do |f| %>
        <button class="btn-sm btn-success">switch to user</button>
        <% end %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
