<h1>Edit <%= @user.email %></h1>
<%= form_for [:admin, @user], url: admin_user_path do |f| %>
  <% if @user.errors.any? %>
    <div>
      <%= pluralize(@user.errors.count, "error") %> prevented the account from being created:
      <ul>
        <% @user.errors.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= render 'form', f: f %>
  <div><%= f.submit "Submit", class: "btn btn-submit" %></div>
</div>
<% end %>